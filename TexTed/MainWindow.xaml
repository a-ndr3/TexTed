<Window x:Class="TexTed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TexTed"
        mc:Ignorable="d"
        Title="TexTed" Height="650" Width="800">
    <Grid>
        <Canvas x:Name="Canvas">
            <local:TextViewer x:Name="textViewer" />
        </Canvas>
        <ScrollBar x:Name="verticalScrollBar" Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Right" ValueChanged="verticalScrollBar_ValueChanged" />
        <ScrollBar x:Name="horizontalScrollBar" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" ValueChanged="horizontalScrollBar_ValueChanged" />
    </Grid>
</Window>
